<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFormAssestment.Views.ViewEntryPage"
             Title="ViewEntryPage">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label x:Name="LblID" FontSize="18"/>
            <Label x:Name="LblFirstName" FontSize="18"/>
            <Label x:Name="LblLastName" FontSize="18"/>
            <Label x:Name="LblBirthDate" FontSize="18"/>

            <Button Text="Delete Entry"
                    HeightRequest="50"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    BackgroundColor="Red"
                    TextColor="White"
                    Clicked="Delete_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>